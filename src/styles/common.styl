html, body
	overflow hidden
.main-sidebar
	.user-panel
		height 38px
		.info
			overflow ellipsis
			max-width 170px
			left auto
			padding 2px 0 0 0
	.logout-button
		display block
		absolute 0 0 0 false
		width 50px
		padding-top 9px
		text-align center
.content-wrapper
	padding-top 50px
	margin-top -50px
.wrapper
	min-height 100vh
a
	cursor pointer
.btn-group.nowrap
	display flex
	> .btn
		flex 0 0 auto
.modal-content, .box
	.overlay
		absolute 0
		background rgba(white, 0.7)
		z-index 50
		.fas
			absolute 50% false false 50%
			margin-left -15px
			margin-top -15px
			color black
			font-size 30px
.fa, .fas, .far, .fab
	backface-visibility hidden
	&:before
		backface-visibility hidden